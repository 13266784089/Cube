* {
  margin: 0
  padding: 0
  box-sizing: border-box
}

a
  color: color-text-default
  outline: none
  text-decoration: none
  &:hover
    color: color-text-active
a.button
  display:inline-block
  background-color: white
  padding: 0.2rem 1rem
  border: 1px solid color-border
  border-radius: 4px
  white-space:nowrap
  cursor:pointer
  &:hover,&:focus
    border-color: color-border-dark
    background-color: color-background-btn-inactive
.right
  float:right
.left
  float:left
.clearfix
  &:after
    content: ''
    clear:both
    display:table
