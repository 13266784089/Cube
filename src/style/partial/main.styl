.view
    width:75%
    height:100%
    min-height:100%
    margin-left:25%
    box-shadow: (- offset-shadow-light) 0 width-shadow-light color-shadow-light
    section
        height:100%
        padding:2*base-gap

    .playlist-intro
        display:inline-block
        height:128px
        ul.playlist-desc
            padding:base-gap
            min-width:15rem
    .btn-group.playlist-display
        border:none
    table.playlist-content
        table-layout:fixed
        th.index
            width:2em
        th.time
            width:4em
        th.artist
            width:14%
        th.album
            width:20%

        td.time
            text-align:center
        td.index
            text-align:right
        td.index  i
            display:none
        tr:hover td.index
            i.hint
                display:inline
            i.active
                display:none
            &::before
                content:''
        tr.active:hover td.index
        tr.active td.index
            i.active
                display:inline
            i.hint
                display:none
            &::before
                content:''
