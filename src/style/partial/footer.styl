#footer
  position:absolute
  left:0
  bottom:0
  width:100%
  height: 3rem
  z-index: 5
  justify-content:space-around
  background-color: color-background-head
  box-shadow: 0 -2px 5px color-border
  ul.playctrl
    semimargin:1em
    font-size:1.5rem
    min-width:90px
    & > li
      padding-right:0
    & > li:first-child
      padding-left: 0
  .track
    position:relative
    width:40%
    min-width:40%
    semimargin:($pw=3em)
    height:($th=0.2rem)
    &::before
      content:attr(data-curtime)
      absolute-center($pw,1.6em,50%,0)
      margin-left: - $pw
    &::after
      content:attr(data-duration)
      absolute-center($pw,1.6em,50%,0)
      text-align:right
      left:inherit
      right:0
      margin-right: - $pw
    *
      position:absolute
      height:100%
      left:0
      top:0
      cursor:pointer
    .track-default
      width:100%
      background-color:color-border
    .track-buffered
      width:60%
      background-color:lightness(color-border,55%)
    .track-played
      width:40%
      background-color:	color-active
      &::after
        content:''
        position:absolute
        width:.7rem
        height: @width
        right:0
        top:0
        margin-top:- ((@height - $th)/2)
        border-radius:50%
        background-color:white
        border: 1px solid color-border
        box-shadow: 0 0 8px color-active
  ul.playset
    font-size:1.5rem
    semimargin:1em
    min-width: 100px
    & > li
      padding-right:0
    & > li:first-child
      padding-left: 0
    & > li.loop ul i
      margin-right:0.5rem
  img.album
    width:2.5rem
    height: @width
    border-radius:4px
    border: 1px solid color-border
    box-shadow: 0 0 12px color-border
