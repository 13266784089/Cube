#top-bar
  position:fixed
  top:0
  width:100%
  background-color: color-background-head
  height: 2.5rem
  line-height: 1.2rem
  box-shadow: 0 ($shadow-offset = 2px) ($shadow-width = 5px) color-border
  $space=(@height - @line-height)/2
  ul.nav
    list-style:none
    li.active
      position:relative
      a
        color:color-text-active
      @extend .arrow
      @extend .arrow-bottom-reverse
      $width=0.5rem
      $height=0.6rem
      $offset = 1/font-size //1px
      &::before,&::after
        bottom: - $space
        border-width: $height $width
        margin-left: - $width
      &::after
        border-width: $height - $offset $width - $offset
        margin-left:  - $width + $offset
        border-color:color-background-body transparent
        box-shadow: 0 ($height/2 + ($shadow-offset - 1)*$offset) $shadow-width  color-background-body;
  ul.tool
    font-size: 15px
    .input-prefix
      @media mq-small
        display:none
      height: 1.5rem
      margin-top: -((@height - @line-height)/2)
      semimargin: base-gap
      float:left
